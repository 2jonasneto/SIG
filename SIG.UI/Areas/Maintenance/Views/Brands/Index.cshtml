@model IEnumerable<SIG.Services.BrandViewModel>

@{
    ViewData["Title"] = "Index";

   
}

<h2>Lista de Fabricantes</h2>
<hr />
<p>
  
    <a onclick="showInPopup('@Url.Action("Create","Brands",null,Context.Request.Scheme)','Adicionar Novo Fabricante')" class="btn btn-warning"><i class="fa-solid fa-plus"></i> Adicionar</a>
  
</p>
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th  style="width: 180px;text-align:right">
                @Html.DisplayNameFor(model => model.ModifyDate)
            </th>
            <th style="width: 150px;text-align:center">Ações</th>
            
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr >
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.ModifyDate)
                </td>

                <td align="right">
                    <a onclick="showInPopup('/maintenance/brands/edit/@item.Id','Editar Fabricante @item.Name')" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a onclick="showInPopup('/maintenance/brands/delete/@item.Id','Excluir Fabricante @item.Name')" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i>

            </a>
                    
                </td>
            </tr>
        }
    </tbody>
</table>