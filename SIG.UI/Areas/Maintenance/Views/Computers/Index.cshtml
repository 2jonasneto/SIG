@model IEnumerable<SIG.Services.ComputerViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<hr />

<table class="table">
    <tr>
        <th> <a asp-area="Maintenance" asp-controller="Computers" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i>Adicionar</a></th>

        <th class="justify-content-end d-flex">
            <form class="d-flex" asp-controller="Computers" asp-action="Index">

                <input type="text" name="SearchString" class="form-control" style="max-width:400px;" />

                <button type="submit" value="" class="form-control" style="background-color: #0082ca;width:50px;margin-left:5px"><i class="fa-solid fa-search"></i></button></>

            </form>
        </th>
    </tr>


</table>
<table class="table table-striped table-bordered" style="border-color:#c1c1c1;">
<thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Processor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemoryType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiskType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiskSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemorySize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandId)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.TypeId)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocacityId)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.AreaId)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.SectorId)
            </th>
         
            <th>
                @Html.DisplayNameFor(model => model.ModifiedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Processor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemoryType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiskType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiskSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemorySize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BrandId)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.TypeId)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.SerialNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocacityId)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.AreaId)
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.SectorId)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                  <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a onclick="showInPopup('/maintenance/computers/delete/@item.Id','Deseja excluir Computador (@item.Name)?')" class="btn btn-danger"><i class="fa-solid fa-trash-can text-dark"></i></a>
                    <a asp-action="Info" class="btn btn-info" asp-route-id="@item.Id"><i class="fa-solid fa-circle-info"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
