@using SIG.Shared.Enums;
@model SIG.Services.ComputerViewModel

@{
    ViewData["Title"] = "Search";
}

<div class="row collapse" id="collapseExample">
    <div class="col-md-12">

        <form  asp-area="Maintenance" asp-controller="Computers" asp-action="index" class="row g-2" method="post" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6 ">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" value=" " name="SearchString" class="form-control" />
            </div>
        
          

            <div class="form-group col-md-3">
                <label asp-for="TypeId" class="control-label"></label>
                <select asp-for="TypeId" name="TypeId" asp-items="ViewBag.TypeId" class="form-select">
                    <option selected="selected" value="00000000-0000-0000-0000-000000000000">Selecionar</option>
                </select>

            </div>

            <div class="form-group col-md-3">
                <label asp-for="SerialNumber" class="control-label"></label>
                <input asp-for="SerialNumber" value=" " class="form-control" name="Serial" onkeyup="toUpperCase(this);" />
            </div>

            <div class="form-group col-md-4">
                <label asp-for="LocacityId" class="control-label"></label>
                <select asp-for="LocacityId" name="LocacityId" asp-items="ViewBag.LocacityId" class="form-select">
                    <option selected="selected" value="00000000-0000-0000-0000-000000000000">Selecionar</option>
                </select>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="AreaId" class="control-label"></label>
                <select asp-for="AreaId" name="AreaId" asp-items="ViewBag.AreaId" class="form-select">
                    <option selected="selected" value="00000000-0000-0000-0000-000000000000">Selecionar</option>
                </select>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="SectorId" class="control-label"></label>
                <select asp-for="SectorId" asp-items="ViewBag.SectorId" class="form-select">
                    <option selected="selected" value="00000000-0000-0000-0000-000000000000">Selecionar</option>
                </select>
            </div>




            <div class="form-group col-md-1">
                <label class="control-label"></label><br />
                <button asp-area="Maintenance" asp-controller="Computers" asp-action="Index" type="submit" value="Localizar" class="form-control btn btn-primary w-100"><i class="fa-solid fa-search"></i>  Buscar</button>
                
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
