@using SIG.Shared.Enums;
@model SIG.Services.ComputerViewModel

@{
    ViewData["Title"] = "Search";
}

<div class="row">
    <div class="col-md-12">

        <form  asp-area="Maintenance" asp-controller="Computers" asp-action="index" class="row g-2" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-6 ">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" name="SearchString" class="form-control" onkeyup="toUpperCase(this);" />
            </div>
        
          

            <div class="form-group col-md-2">
                <label  class="control-label"></label>
                <select  asp-items="ViewBag.TypeId" class="form-select">
                    <option selected="selected" value="">Selecionar</option>
                </select>

            </div>

            <div class="form-group col-md-2">
                <label  class="control-label"></label>
                <input  class="form-control" onkeyup="toUpperCase(this);" />
            </div>

            <div class="form-group col-md-3">
                <label  class="control-label"></label>
                <select name="LocacityId" asp-items="ViewBag.LocacityId" class="form-select">
                    <option selected="selected" value="">Selecionar</option>
                </select>
            </div>

            <div class="form-group col-md-3">
                <label  class="control-label"></label>
                <select  asp-items="ViewBag.AreaId" class="form-select">
                    <option selected="selected" value="">Selecionar</option>
                </select>
            </div>

            <div class="form-group col-md-2">
                <label class="control-label"></label>
                <select  asp-items="ViewBag.SectorId" class="form-select">
                    <option selected="selected" value="">Selecionar</option>
                </select>
            </div>



            <br />
            <hr />

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary data-ajax="true"
                       data-ajax-method="POST"
                       data-ajax-mode="replace"
                       data-ajax-update="#TESTE"/>
                
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
