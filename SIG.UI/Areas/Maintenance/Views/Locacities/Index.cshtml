@model IEnumerable<SIG.Services.LocacityViewModel>

@{
    ViewData["Title"] = "Index";


}

<h2>Cadastro de Unidades</h2>
<hr />
<table class="table">
    <tr>
        <th> <a asp-area="Maintenance" asp-controller="Locacities" asp-action="Create" class="btn btn-success"><i class="fa-solid fa-plus"></i>Adicionar</a></th>

        <th class="justify-content-end d-flex">
            <form class="d-flex" asp-controller="Locacities" asp-action="Index">

                <input type="text" name="SearchString" class="form-control" style="max-width:400px;" />

                <button type="submit" value="" class="form-control" style="background-color: #0082ca;width:50px;margin-left:5px"><i class="fa-solid fa-search"></i></button></>

            </form>
        </th>
    </tr>


</table>
<table class="table table-striped table-bordered" style="border-color:#c1c1c1;">
    <thead class="table-dark">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ActingArea.Name)
            </th>
            <th style="width: 180px;text-align:right">
                @Html.DisplayNameFor(model => model.ModifyDate)
            </th>
            <th style="width: 150px;text-align:center">Ações</th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="vertical-align:middle">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActingArea.Name)
                </td>
                <td align="right">
                    @Html.DisplayFor(modelItem => item.ModifyDate)
                </td>

                <td align="right">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a onclick="showInPopup('/maintenance/locacities/delete/@item.Id','Deseja excluir Unidade (@item.Name)?')" class="btn btn-danger"><i class="fa-solid fa-trash-can text-dark"></i></a>




                </td>
            </tr>
        }
    </tbody>
</table>