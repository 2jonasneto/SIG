<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SIG.UI</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SIG.UI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
</head>
<body style="background-color:whitesmoke">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm  
          navbar-dark bg-dark border-bottom box-shadow ">
            <div class="container-fluid" >
                <a  class="navbar-brand text-white-50" asp-area="" asp-controller="Home" asp-action="Index">SIG.UI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul  class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa-solid fa-book-medical"></i><span style="color:transparent">*</span>  Cadastros
                            </a>
                            <div class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdownMenuLink">
                               
                                <a class="dropdown-item" asp-area="Maintenance" asp-controller="Brands" asp-action="Index">
                                    <i class="fa-solid fa-industry"></i><span style="color:transparent">**</span>  Fabricantes
                                </a>
                                <a class="dropdown-item" asp-area="Maintenance" asp-controller="EquipTypes" asp-action="Index">
                                    <i class="fa-solid fa-server"></i><span style="color:transparent">**</span>   Tipos de Equipamento
                                </a>
                                <a class="dropdown-item" asp-area="Maintenance" asp-controller="ActingAreas" asp-action="Index">
                                    <i class="fa-solid fa-globe"></i><span style="color:transparent">**</span>   Áreas
                                </a>
                                <a class="dropdown-item" asp-area="Maintenance" asp-controller="Locacities" asp-action="Index">
                                    <i class="fa-solid fa-building"></i><span style="color:transparent">**</span>   Unidades
                                </a>
                                <a class="dropdown-item" asp-area="Maintenance" asp-controller="Sectors" asp-action="Index">
                                    <i class="fa-solid fa-vector-square"></i><span style="color:transparent">**</span>   Setores
                                </a>
                            </div>
                        </li>
                       
                 
                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa-solid fa-computer"></i><span style="color:transparent">*</span>   Computadores
                            </a>
                            <div class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" asp-area="Maintenance" asp-controller="Computers" asp-action="Index">
                                    <i class="fa-solid fa-server"></i><span style="color:transparent">*</span> Cadastro
                                </a>
                                <a class="dropdown-item" asp-area="Maintenance" asp-controller="Historics" asp-action="Index">
                                    <i class="fa-solid fa-clock-rotate-left"></i><span style="color:transparent">*</span> Ocorrências
                                </a>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
  
   

     


  
    <div class="container-fluid" >
  
        <main role="main" class="p-3">
            @RenderBody()
        </main>
    </div>
    
    <div class="modal fade" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" id="form-modal">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>*@
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>
    
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - SIG.UI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
